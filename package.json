{
  "name": "MusicHopper",
  "version": "1.0.0",
  "description": "Lecteur de musique moderne et élégant",
  "author": {
    "name": "Votre Nom",
    "email": "votre.email@example.com"
  },
  "main": "electron/main.mjs",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "electron:serve": "electron .",
    "electron:build": "npm run build && electron-builder",
    "clean": "rimraf dist dist_electron",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "npm run build && electron-builder",
    "electron:dist-linux": "npm run build && electron-builder --linux",
    "electron:dist-linux-deb": "npm run build && electron-builder --linux deb",
    "electron:dist-all": "npm run build && electron-builder --linux --win --mac"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "buffer": "^6.0.3",
    "colorthief": "^2.6.0",
    "electron-store": "^10.0.1",
    "howler": "^2.2.4",
    "music-metadata-browser": "^2.5.11",
    "pinia": "^3.0.1",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^8.2.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^26.0.0",
    "npm-run-all2": "^7.0.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vitest": "^3.0.2",
    "vue-tsc": "^2.2.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.tonapp.musichopper",
    "productName": "MusicHopper",
    "copyright": "© 2025 Toi",
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "electron/main.mjs",
      "electron/preload.cjs",
      "dist/**/*",
      "package.json",
      "node_modules/electron-store/**/*",
      "!node_modules",
      "!src",
      "!public",
      "!*.config.*",
      "!README.md"
    ],
    "asarUnpack": [
      "node_modules/electron-store/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.mjs"
    },
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "assets/musicHopper.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/musicHopper.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "icon": "assets/musicHopper.png",
      "category": "AudioVideo",
      "synopsis": "Lecteur de musique moderne et élégant",
      "description": "MusicHopper est un lecteur de musique moderne avec une interface élégante et des fonctionnalités avancées.",
      "maintainer": "Votre Nom <votre.email@example.com>",
      "vendor": "MusicHopper Team",
      "desktop": {
        "Name": "MusicHopper",
        "Comment": "Lecteur de musique moderne",
        "Keywords": "music;audio;player;mp3;flac;ogg;",
        "StartupNotify": "true",
        "Categories": "AudioVideo;Audio;Player;"
      },
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}